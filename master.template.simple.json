{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApimServiceName": {
            "type": "string",
            "metadata": {
                "description" : "The name of the API Management"
            }
        },
        "publisherEmail": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The email address of the owner of the service"
            }
        },
        "publisherName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The name of the owner of the service"
            }
        },
        "sku": {
            "type": "string",
            "allowedValues": ["Developer", "Standard", "Premium", "Consumption"],
            "defaultValue": "Developer",
            "metadata": {
                "description": "The pricing tier of this API Management service"
            }
        },
        "skuCount": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description":
                    "The instance  size of this API Management service."
            }
        },
        "storageAccountName":{
          "type": "string",
          "metadata": {
                "description": "Name of the storage account"
            }
        },
        "blobContainerName":{
          "type": "string",
          "metadata": {
                "description": "Name of the blob container"
            }
        },
        "storageAccountGlobalUrl":{
          "type": "string",
          "allowedValues": ["blob.core.windows.net"],
          "defaultValue": "blob.core.windows.net",
          "metadata": {
                "description": "Global URL of the storage accounts"
            }
        },
        "storageAccountProtocol":{
          "type": "string",
          "allowedValues": ["http", "https"],
          "defaultValue": "https",
          "metadata": {
                "description": "Protocol to access storage account"
          }
        },
        "storageSasToken": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "SAS token to access the linked templates"
            }
        }                      
    },
    "functions":[
    {
      "namespace": "tosokr",
      "members": {
        "getStorageContainerUrl": {
          "parameters": [
            {
              "name": "storageAccountProtocol",
              "type": "string"
            },
            {
              "name": "storageAccountName",
              "type": "string"
            },
            {
              "name": "storageAccountGlobalUrl",
              "type": "string"
            },
            {
              "name": "blobContainerName",
              "type": "string"
            }
          ],
          "output": {
            "type": "string",
            "value": "[concat(parameters('storageAccountProtocol'),'://',parameters('storageAccountName'),'.',parameters('storageAccountGlobalUrl'),'/',parameters('blobContainerName') )]"
          }
        }
      }
    }
    ],   
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "serviceTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri":"[concat(tosokr.getStorageContainerUrl(parameters('storageAccountProtocol'),parameters('storageAccountName'),parameters('storageAccountGlobalUrl'),parameters('blobContainerName')),'/service.template.json',parameters('storageSasToken'))]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                "ApimServiceName": {"value": "[parameters('ApimServiceName')]" }, 
                "PublisherName": {"value": "[parameters('PublisherName')]" },
                "PublisherEmail": {"value": "[parameters('PublisherEmail')]" },
                "sku": {"value": "[parameters('sku')]" },
                "skuCount": {"value": "[parameters('skuCount')]" }
               }
            }
         },        
         {
            "apiVersion": "2017-05-10",
            "name": "productsTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri":"[concat(tosokr.getStorageContainerUrl(parameters('storageAccountProtocol'),parameters('storageAccountName'),parameters('storageAccountGlobalUrl'),parameters('blobContainerName')), '/products/products.template.json', parameters('storageSasToken'))]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                 "ApimServiceName": {"value": "[parameters('ApimServiceName')]" }                 
               }
            },
            "dependsOn": [
             "[resourceId('Microsoft.Resources/deployments', 'serviceTemplate')]"             
            ]
         },
         {
          "apiVersion": "2017-05-10",
          "name": "subscriptionsTemplate",
          "type": "Microsoft.Resources/deployments",
          "properties": {
            "mode": "Incremental",
            "templateLink": {
               "uri":"[concat(tosokr.getStorageContainerUrl(parameters('storageAccountProtocol'),parameters('storageAccountName'),parameters('storageAccountGlobalUrl'),parameters('blobContainerName')), '/subscriptions.template.json',parameters('storageSasToken'))]",
               "contentVersion":"1.0.0.0"
            },
            "parameters": {
               "ApimServiceName": {"value": "[parameters('ApimServiceName')]" }
             }
          },
          "dependsOn": [
           "[resourceId('Microsoft.Resources/deployments', 'productsTemplate')]"             
          ]
       }     
    ],
    "outputs": {}
}