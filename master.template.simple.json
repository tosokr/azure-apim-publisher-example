{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "repoBaseUrl":{
            "type": "string",
            "metadata": {
                "description": "Base URL of the repository"
            }
        },
        "ApimServiceName": {
            "type": "string",
            "metadata": {
                "description" : "The name of the API Management"
            }
        },
        "publisherEmail": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The email address of the owner of the service"
            }
        },
        "publisherName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The name of the owner of the service"
            }
        },
        "sku": {
            "type": "string",
            "allowedValues": ["Developer", "Standard", "Premium", "Consumption"],
            "defaultValue": "Developer",
            "metadata": {
                "description": "The pricing tier of this API Management service"
            }
        },
        "skuCount": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description":
                    "The instance  size of this API Management service."
            }
        },
        "storageSasToken": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "SAS token to access the linked templates"
            }
        },
        "LinkedTemplatesBaseUrl": {
         "type": "string",
         "metadata": {
           "description": "Base URL of the repository that contains the generated templates"
         }
       },
       "PolicyXMLBaseUrl": {
         "type": "string",
         "metadata": {
           "description": "Base URL of the repository that contains the generated policy files"
         }         
       },
       "ToDoServiceUrl": {
        "type": "string",
        "metadata": {
          "description": "Service URL for the backend APIs"
        }         
      },
      "ToDoV2ServiceUrl": {
        "type": "string",
        "metadata": {
          "description": "Service URL for the backend APIs"
        }         
      }    
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "serviceTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri":"[concat(parameters('repoBaseUrl'), '/service.template.json',parameters('storageSasToken'))]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                "ApimServiceName": {"value": "[parameters('ApimServiceName')]" }, 
                "PublisherName": {"value": "[parameters('PublisherName')]" },
                "PublisherEmail": {"value": "[parameters('PublisherEmail')]" },
                "sku": {"value": "[parameters('sku')]" },
                "skuCount": {"value": "[parameters('skuCount')]" }
               }
            }
         },        
         {
            "apiVersion": "2017-05-10",
            "name": "productsTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri":"[concat(parameters('repoBaseUrl'), '/products/products.template.json', parameters('storageSasToken'))]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                 "ApimServiceName": {"value": "[parameters('ApimServiceName')]" }                 
               }
            },
            "dependsOn": [
             "[resourceId('Microsoft.Resources/deployments', 'serviceTemplate')]"             
            ]
         },
         {
          "apiVersion": "2017-05-10",
          "name": "subscriptionsTemplate",
          "type": "Microsoft.Resources/deployments",
          "properties": {
            "mode": "Incremental",
            "templateLink": {
               "uri":"[concat(parameters('repoBaseUrl'), '/subscriptions.template.json',parameters('storageSasToken'))]",
               "contentVersion":"1.0.0.0"
            },
            "parameters": {
               "ApimServiceName": {"value": "[parameters('ApimServiceName')]" }
             }
          },
          "dependsOn": [
           "[resourceId('Microsoft.Resources/deployments', 'productsTemplate')]"             
          ]
       }     
    ],
    "outputs": {}
}