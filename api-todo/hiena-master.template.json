{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API Management"
      }
    },
    "LinkedTemplatesBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains the generated templates"
      }
    },
    "PolicyXMLBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains the generated policy files"
      }
    },
    "ServiceUrl" :{
      "type":"string"
    }

  },
  "resources": [
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/hiena-namedValues.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "namedValuesTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": []
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/hiena-globalServicePolicy.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "globalServicePolicyTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/hiena-apiVersionSets.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "versionSetTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/hiena-products.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "productsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/hiena-loggers.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "loggersTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/hiena-backends.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "backendsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/hiena-authorizationServers.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "authorizationServersTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/hiena-todo-api.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "ServiceUrl": {
            "value": "[parameters('ServiceUrl')]"
          }
        }
      },
      "name": "apisTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'globalServicePolicyTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'versionSetTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'productsTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'loggersTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'backendsTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'authorizationServersTemplate')]"
      ]
    }
  ]
}